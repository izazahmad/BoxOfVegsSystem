<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tag -->
    <meta charset="UTF-8">
    <meta name="author" content="Izaz Shaikh">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="veiwport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>@ViewBag.Title-BOV-Admin</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.png" />
    <!--Bootstrap Css-->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css" />
    <!-- Animate.css for animations -->
    <link rel="stylesheet" href="~/Content/css/animate/animate.min.css" />
    <!-- Fontawsome Vector Icons-->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/all.min.css" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/Content/css/owl_carousel/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Content/css/owl_carousel/owl.theme.default.min.css" />
    <!-- Maginfic popup -->
    <link rel="stylesheet" href="~/Content/css/magnific-popup/magnific-popup.css" />
    <!--RateYo plugin for star rating -->
    <link rel="stylesheet" href="~/Content/css/rate-yo/jquery.rateyo.min.css" />
    <!--Bootstrap DataTables-->
    <link rel="stylesheet" href="~/Content/css/datatables/datatables.min.css" />
    <!-- Sweet Alert Popup Box messages-->
    <link href="~/Content/css/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    <!-- boxofvegs css -->
    <link rel="stylesheet" href="~/Content/css/boxofvegs.css" />
    <!--jQuery Bundle-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar admin navbar-expand fixed-top">
            <a class="navbar-brand" href="index.html">
                <img class="admin-logo" src="../Content/images/logo.png" alt="logo">
            </a>
            <button id="sidebarToggler">
                <i class="fas fa-bars"></i>
            </button>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <div class="dropdown right">
                        <span class="nav-link">
                            <i class="fa fa-user"></i> Admin
                        </span>
                        <ul class="dropdown-items right-float">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <li><a class="dropdown-lnk" href="@Url.Action("Index", "Home")">Customer Panel</a></li>
                                <li>
                                    <div class="dropdown-divider"></div>
                                </li>
                                <li><a class="text-danger" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                            }
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
    </header>
    <div id="sidebar-wrapper">
        <ul class="sidebar fixed-side navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="admin.html">
                    <i class="fas fa-palette"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Category")">
                    <i class="far fa-file"></i>
                    <span>Categories</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Product")">
                    <i class="far fa-file"></i>
                    <span>Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="far fa-file"></i>
                    <span>Orders</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Supplier")">
                    <i class="far fa-file"></i>
                    <span>Suppliers</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Purchase")">
                    <i class="far fa-file"></i>
                    <span>Purchases</span>
                </a>
            </li>
        </ul>
        <div id="sidebar-content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer id="admin-footer">
        <div id="bov-footer-bottom" class="text-center">
            <div id="bov-copyright">
                <p>Copyrights &copy; 2020 All Right Reserved By BoxOfVegs Inc.</p>
            </div>
        </div>
        <a href="" id="scroll-up" class="btn btn-sm go-up-btn smooth-scroll"><i class="fas fa-angle-double-up"></i></a>
    </footer>
    <!-- jQuery -->
    @*<script src="~/Content/js/jquery-3.4.1.min.js"></script>*@
    <!-- Bootstrap js-->
    <script src="~/Content/js/bootstrap/bootstrap.min.js"></script>
    <!-- owl carousel -->
    <script src="~/Content/js/owl_carousel/owl.carousel.min.js"></script>
    <!-- Wow- reveal animation on scroll -->
    <script src="~/Content/js/wow/wow.min.js"></script>
    <!-- easing- scroll -->
    <script src="~/Content/js/easing/jquery.easing.1.3.js"></script>
    <!-- Magnific popup -->
    <script src="~/Content/js/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- rate yo for star -->
    <script src="~/Content/js/rate-yo/jquery.rateyo.min.js"></script>
    <!-- zoom jquery to enlarge image-->
    <script src="~/Content/js/zoom/jquery.zoom.min.js"></script>
    <!--bootstrap datatables-->
    <script src="~/Content/js/datatables/datatables.min.js"></script>
    <!--Sweet Alert for popup messages-->
    <script src="~/Content/js/sweetalert/sweetalert2.all.min.js"></script>
    <!-- boxofvegs customize javascript-->
    <script src="~/Content/js/boxofvegs.js"></script>
</body>

</html>
